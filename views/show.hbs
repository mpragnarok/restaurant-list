<h3 class='new-restaurant-title'>{{restaurant.name}}</h3>

<div class="container pb-5">
  <div class="card my-4">
    <div class="m-4">
      <form>
        <div class="card-body">
          <div class="form-group">
            <label for="nameEn"><span class="text-secondary">
                <i class="fas fa-font-case"></i>
                Restaurant Name (English):
              </span> {{restaurant.nameEn}}</label>
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{restaurant.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="form-group">
            <label for="name"><span class="text-secondary">
                <i class="fas fa-utensils pr-2"></i>
                Categoryï¼š
              </span>{{restaurant.category}}</label>
          </div>
          <div class="form-group">
            <label for="nameEn">
              <span class="text-secondary">
                <i class="fas fa-map-marker-alt pr-2"></i>
                Location:
              </span>
              {{restaurant.location}}
              <a href="{{restaurant.googleMap}}" class="text-secondary" target="_blank">
                <i class="fas fa-location-arrow pr-2 fa-xs"></i>
              </a></label>
          </div>
          <div class="form-group"><span class="text-secondary">
              <span class="text-secondary">
                <i class="fas fa-mobile-alt pr-2"></i>
                Phone:
              </span>
              {{restaurant.phone}}
          </div>
          <div class="form-group"><span class="text-secondary">
              <i class="fas fa-link"></i>
              Website:
              <a href="{{restaurant.website}}"><span>{{restaurant.website}}</a>
          </div>

          <div class="form-group"><span class="text-secondary">
              <span class="text-secondary">
                <i class="fas fa-mobile-alt pr-2"></i>
                Description:
              </span>
              {{restaurant.description}}
          </div>


        </div>
        <a href="/restaurants/{{restaurant.id}}/edit" type="btn" class="btn btn-outline-secondary">Edit</a>
        <a type="button" href="/" class=" btn btn-outline-success">Back</a>
    </div>

    </form>

  </div>
  <img class="img-fluid rounded mx-auto d-block"" src=" {{restaurant.image}}" alt="{{restaurant.name}}">
</div>